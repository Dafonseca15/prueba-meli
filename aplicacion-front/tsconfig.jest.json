{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "CommonJS",
    "target": "ES2016",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.setup.js",
    "jest.config.cjs",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "exclude": ["node_modules", "dist", "build", "**/*.spec.ts", "**/*.spec.tsx"]
}
